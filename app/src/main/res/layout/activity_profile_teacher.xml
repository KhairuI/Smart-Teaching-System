<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.profileTeacher.ProfileTeacher">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/profile_teacher_toolbar">

        </include>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileTeacherImageId"
                        android:src="@drawable/profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView

                        android:textSize="18sp"
                        android:id="@+id/profileTeacherNameId"
                        android:text="Masud Rabbani"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView

                        android:id="@+id/profileTeacherUserId"
                        android:textSize="16sp"
                        android:text="712204321"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_email"
                            android:layout_width="24dp"
                            android:layout_height="24dp">

                        </ImageView>
                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/profileTeacherEmailId"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="masud.cse@diu.edu.bd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_department"
                            android:layout_width="24dp"
                            android:layout_height="24dp">

                        </ImageView>
                        <TextView
                            android:id="@+id/profileTeacherDeptId"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:text="Lecturer Dept. of CSE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_phone"
                            android:layout_width="24dp"
                            android:layout_height="24dp">

                        </ImageView>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/profileTeacherMobileId"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="01515267153"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_home"
                            android:layout_width="24dp"
                            android:layout_height="24dp">

                        </ImageView>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/profileTeacherOfficeId"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="CSE422"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/green"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="@string/counseling_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="10dp"

                            android:backgroundTint="@color/small_blue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:justificationMode="inter_word"
                                android:id="@+id/teacherCounselingScheduleId"
                                android:layout_gravity="center_horizontal"
                                android:textSize="16sp"
                                android:text="@string/counseling_schedule"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/updateCounselingTextId"
                            android:textColor="@color/small_blue"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="@string/update_counseling"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/teacherEditButtonId"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="30dp"
            android:clickable="true"
            android:src="@drawable/ic_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>


        <ProgressBar
            android:id="@+id/teacherProfileProgressId"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ProgressBar>


    </RelativeLayout>



</LinearLayout>