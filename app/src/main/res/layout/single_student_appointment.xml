<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="8dp"
            android:id="@+id/topId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/singleStudentAppointmentImageId"
                android:src="@drawable/profile"
                android:layout_width="48dp"
                android:layout_height="48dp">

            </de.hdodenhof.circleimageview.CircleImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="7dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/topId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Akther Hossain"
                android:id="@+id/singleStudentAppointmentNameId"
                android:textSize="16sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/singleStudentAppointmentInitialId"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="SAH"
                android:layout_marginStart="5dp"
                android:id="@+id/singleStudentAppointmentInitialId"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="Lecturer Dept. of CSE"
                android:id="@+id/singleStudentAppointmentDeptId"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_below="@id/singleStudentAppointmentNameId"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="Pending"
                android:id="@+id/singleStudentAppointmentStatusId"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_below="@id/singleStudentAppointmentDeptId"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>


        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_below="@id/mainLayout"
        android:background="@color/normal_small_blue"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>



</RelativeLayout>